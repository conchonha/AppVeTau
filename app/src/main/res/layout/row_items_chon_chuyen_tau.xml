<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:id="@+id/card_chuyen_tau"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_4sdp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="@dimen/_2sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/img_tau"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tau_hoa"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/txt_ten_tau"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="center"
                    android:layout_below="@+id/img_tau"
                    android:text="122"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/liner_gadi"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:25"
                    android:id="@+id/txt_thoi_gian_1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06/01/2020"
                    android:id="@+id/txt_ngay_1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ha noi"
                    android:id="@+id/txt_dia_diem_1"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#3E000000"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:25"
                    android:id="@+id/txt_thoi_gian_2"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06/01/2020"
                    android:id="@+id/txt_ngay_2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ha noi"
                    android:id="@+id/txt_dia_diem_2"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>